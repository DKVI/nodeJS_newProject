<div class="mt-4">
  <h3>
    Create new course
  </h3>

  <form action="/courses/store" method="POST">

    <div class="form-group">

      <label class="name">
        Tên khóa học
      </label>
      <input type="text" class="fomr-control" id="name" name="name" />
    </div>
    <div class="form-group">

      <label class="description">
        Mô tả khóa học
      </label>
      <input
        type="text"
        class="fomr-control"
        id="description"
        name="description"
      />
    </div>
    <div class="form-group">

      <label class="videoId">
        videoId
      </label>
      <input type="text" class="fomr-control" id="videoId" name="videoId" />
    </div>
    <div class="form-group">

      <label class="level">
        level
      </label>
      <input type="text" class="fomr-control" id="level" name="level" />
    </div>
    <button type="submit" class="btn btn-primary">
      Submit
  </form>
</div>