<script>
  const idList = [];
  const distinctValues = function (value, array) {
    array.forEach ((item, index) => {
      if (item === value) {
        array.splice(index, 1);
      }
      else return;
    })
  }
  const convertToReqBody = function (array) {
    let reqBody = {};
    array.forEach ((item, index) => {
      reqBody[index] = item;
    })
    return reqBody;
  }
  const deleteBtn = document.querySelectorAll('.delete-course-btn'); const
  formSubmit = document.querySelector('form'); deleteBtn.forEach(btn => {
  btn.addEventListener('click', function(e) { 
    const courseId = e.target.dataset.courseId; 
    formSubmit.action = `/courses/${courseId}?_method=PATCH`; 
    formSubmit.method = 'POST'; 
  }) 
  })
  formSubmit.addEventListener('submit', function(e) { e.preventDefault();
  formSubmit.submit(); }) 
  const checkAllBtn = document.querySelector('input[name="checkAll"]'); 
  const checkboxes = document.querySelectorAll('#checkbox'); 
  checkboxes.forEach ((item) => {
    item.addEventListener('change', function(e) {
        if (e.target.checked) {
        idList.push(e.target.name);
      } else {
        idList.pop(e.target.name);
      }
      console.log (idList);
    })
  })
  console.log (checkAllBtn);
  checkAllBtn.onchange = () => {

    if (checkAllBtn.checked) {
        checkboxes.forEach ((item) => {
            item.checked = true;
            distinctValues(item.name, idList); 
            idList.push(item.name);
        })
    } 
    else {
      checkboxes.forEach ((item) => {
            item.checked = false;
            distinctValues(item.name, idList); 
            idList.pop(item.name);
        })
    }
        console.log (idList);
  }
    const finalSubmitForm = document.querySelector(".final-submit-form");  
    const finalRemoveBtn = document.querySelector(".final-remove-btn");
    finalRemoveBtn.onclick = async () => {
      if (idList.length) {
        const reqBody = convertToReqBody(idList);
        await fetch (`/courses/multiple-delete`, {
          method: "DELETE",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify(reqBody),
        })
      }
    }
</script>