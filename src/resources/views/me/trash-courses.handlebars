<div class="container">
  <a href="/me/stored/courses">
    danh sách khóa học</a>
  <h1>Khóa học đã xóa</h1>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">STT</th>
        <th scope="col">Tên khóa học</th>
        <th scope="col">Mô tả</th>
        <th scope="col">Level</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      {{#each courses}}

        <tr>
          <th scope="row">{{sum @index 1}}</th>
          <td>{{this.name}}</td>
          <td>{{this.description}}</td>
          <td>{{this.level}}</td>
          <td>
            <form
              action="/courses/{{this._id}}/restore?_method=PATCH"
              method="POST"
            >
              <button class="btn btn-link btn-restore">Khôi phục
              </button>
            </form>
            <a
              class="btn btn-link deleted-btn"
              data-toggle="modal"
              href=""
              data-target="#delete-course-modal"
              data-course-id="{{this._id}}"
            >Xóa vĩnh viễn</a>
          </td>
        </tr>
        <!-- Modal -->

      {{else}}
        <tr class="text-center">
          <td colspan="5">Chưa có khóa học đã xóa đã nào!
            <a href="/courses/create">Thêm khóa học mới</a>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>

<form class="deleted-form">
  <div
    class="modal fade"
    id="delete-course-modal"
    tabindex="-1"
    role="dialog"
    aria-labelledby="deleteModalLabel"
    aria-hidden="true"
  >
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="deleteModalLabel">Delete Confirmation</h5>
          <button
            type="button"
            class="close"
            data-dismiss="modal"
            aria-label="Close"
          >
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          Are you sure you want to delete this selection?
        </div>
        <div class="modal-footer">
          <button
            type="button"
            class="btn btn-secondary"
            data-dismiss="modal"
          >Cancel</button>
          <button type="submit" class="btn btn-danger">Delete</button>
        </div>
      </div>
    </div>
  </div>
</form>

<script>
  const deleteBtn = document.querySelector ('.deleted-btn');
  const form = document.querySelector ('.deleted-form'); 
  deleteBtn.onclick = function (e) {
      e.preventDefault ();
      form.action = `/courses/${this.dataset.courseId}/destroy?_method=DELETE`;
      form.method = 'POST';
  };
  
</script>